    <style>
    .rodape {
        position: fixed;
        bottom: 10px;
        left: 0px;
        width: 100vw;
        text-align: center;
    }

    .divs {
        display: none;
    }

    #div1 {
        background-color: #cc55dd;
    }

    #div2 {
        background-color: #aa9988;
    }

    #div3 {
        background-color: #ca5421;
    }

    #div4 {
        background-color: #aaaabb;
    }
    </style>
</head>

<body>
    <script>
    $(function() {

        $('.btn').on('touchstart', function() {

            $(".btn").css("background-color", "blue");
            $(this).css("background-color", "red");

            $(".divs").hide();
            var alvo = $(this).attr("data-alvo");
            $("#" + alvo).show();
            const endTime = new Date();

        })
    })
    </script>
    <div class="container-fluid">
        <h1>Teste de dalay do onclick. [Jquery touchstart] </h1>
        <div class='rodape'>
            <form onsubmit="return false;">
                <button class='btn btn-primary' data-alvo="div1">Div 1</button>
                <button class='btn btn-primary' data-alvo="div2">Div 2</button>
                <button class='btn btn-primary' data-alvo="div3">Div 3</button>
                <button class='btn btn-primary' data-alvo="div4">Div 4</button>
            </form>
        </div>
        <div class="divs" id='div1'>
            <h3>Div 1</h3>
        </div>
        <div class="divs" id='div2'>
            <h3>Div 2</h3>
        </div>
        <div class="divs" id='div3'>
            <h3>Div 3</h3>
        </div>
        <div class="divs" id='div4'>
            <h3>Div 4</h3>
        </div>
    </div>
</body>

